{
  "compilerOptions": {
    "rootDir": "./",
    "incremental": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "module": "commonjs",
    "target": "es2021",
    "noImplicitAny": false,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "alwaysStrict": true,
    "sourceMap": true,
    "declaration": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "stripInternal": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "newLine": "LF",
    "outDir": "./dist",
    "lib": [
      "es6", "esnext", "es2021"
    ],
    "typeRoots": [
      "./node_modules/@types",
      "./src/interface",
    ],
    "resolveJsonModule": true
  },
  "include": [
    "src",
    "test",
    "index.ts"
  ],
  "exclude": [
    "**/node_modules",
    "node_modules",
    "**/dist"
  ]
}
